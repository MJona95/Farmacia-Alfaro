---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
			<slot />	
		<Footer />
	</body>
</html>
<style is:global>

	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	section {
		animation: aparicion linear alternate;
		animation-timeline: view();
		animation-range: 0 500px;
	}

	@keyframes aparicion {

		0%{
			opacity: 0;
			scale: 0.1;
		}

		100%{
			opacity: 1;
			scale: 1;
		}
	}

	footer {
		animation: none;
	}

	:root{
		--first-color: hsl(150, 100%, 43%, 1);
		--second-color: rgb(130, 130, 130);
		--third-color: hsl(150, 100%, 100%, 1);
	}

	@media (width > 764px){

		#header{
			animation: blur linear both;
			animation-timeline: scroll();
			animation-range: 0 600px;
		}

		.textScroll{
			animation: text linear both;
			animation-timeline: scroll();
			animation-range: 0 500px;
		}

		@keyframes blur {
			to{
				box-shadow: 
					0px 5px 50px -50px rgba(0, 0, 0, 0.1),
					0px 5px 50px -50px rgba(0, 0, 0, 0.3);
				background: rgba(0, 0, 0, 0.3);
				backdrop-filter: blur(10px)
			}
		}

		@keyframes text {
			to{
				color: #fff;
			}
		}

		@keyframes animacionScroll {

  		from {

    		transform: translateY(0);
    		opacity: 1;

  		}

  		to {

    		transform: translateY(-50%);
    		opacity: 0.5;

  		}

		}
		
	}

</style>
